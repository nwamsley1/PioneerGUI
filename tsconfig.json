{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["svelte"]
  },
  "include": ["src/**/*", "src-tauri/**/*"],
  "exclude": ["node_modules"]
}
